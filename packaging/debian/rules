#!/usr/bin/make -f

ifeq (${DEB_HOST_ARCH},amd64)
  OBJ_STRIP = objcopy
else ifeq (${DEB_HOST_ARCH},arm64)
  OBJ_STRIP = aarch64-linux-gnu-objcopy
else ifeq (${DEB_HOST_ARCH},armhf)
	OBJ_STRIP = arm-linux-gnueabihf-objcopy
else
	OBJ_STRIP = objcopy
endif

export DH_VERBOSE = 1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

SUBSTVARS = -Vshlibs:Depends="libc6"

%:
	dh $@ -P debian/target/${DEB_HOST_ARCH} --with=systemd

override_dh_systemd_enable:
	dh_systemd_enable -pcnb-rates --name=cnb-rates cnb-rates.path
	dh_systemd_enable -pcnb-rates --name=cnb-rates cnb-rates.service
	dh_systemd_enable -pcnb-rates --name=cnb-rates-rest cnb-rates-rest.service
	dh_systemd_enable -pcnb-rates --name=cnb-rates-import cnb-rates-import.service
	dh_systemd_enable -pcnb-rates --name=cnb-rates-import cnb-rates-import.timer
	dh_systemd_enable -pcnb-rates --name=cnb-rates-batch cnb-rates-batch.service


override_dh_systemd_start:
	dh_systemd_start -pcnb-rates --name=cnb-rates cnb-rates.path
	dh_systemd_start -pcnb-rates --name=cnb-rates cnb-rates.service
	dh_systemd_start -pcnb-rates --name=cnb-rates cnb-rates-import.timer
	dh_systemd_start -pcnb-rates --name=cnb-rates-rest cnb-rates-rest.service

override_dh_installinit:
	dh_installinit -pcnb-rates --noscripts
	@mv \
		debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-rest-* \
		debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-rest
	@mv \
		debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-import-* \
		debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-import
	@mv \
		debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-batch-* \
		debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-batch

override_dh_strip:
	$(OBJ_STRIP) --strip-unneeded debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-rest
	$(OBJ_STRIP) --strip-unneeded debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-import
	$(OBJ_STRIP) --strip-unneeded debian/target/${DEB_HOST_ARCH}/usr/bin/cnb-rates-batch

override_dh_gencontrol:
	dh_gencontrol -- $(SUBSTVARS)

clean:
	rm -f debian/debhelper-build-stamp || :
	rm -f debian/files || :
	rm -rf debian/target/${DEB_HOST_ARCH} || :
	rm -rf debian/*.debhelper* || :
	rm -rf debian/*.substvars || :
