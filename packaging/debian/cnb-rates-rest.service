[Unit]
Description=openbank CNB Rates REST service
PartOf=cnb-rates.service
After=cnb-rates.service
ConditionPathExists=/etc/cnb-rates/conf.d/init.conf

[Service]
Type=notify
EnvironmentFile=/etc/cnb-rates/conf.d/init.conf
StartLimitBurst=0
ExecStart=/usr/bin/cnb-rates-rest
StandardInput=null
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Restart=always
RestartSec=0
TimeoutStartSec=0
TimeoutSec=infinity
KillMode=process

[Install]
WantedBy=multi-user.target
